<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:hint="Digite um nÃºmero"
        android:inputType="number"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/sete"
            android:text="7"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/oito"
            android:text="8"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/nove"
            android:text="9"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiplicacao"
            android:text="*"
            android:onClick="operadores"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/quatro"
            android:text="4"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/cinco"
            android:text="5"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/seis"
            android:text="6"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtracao"
            android:text="-"
            android:onClick="operadores"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/um"
            android:text="1"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/dois"
            android:text="2"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/tres"
            android:text="3"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/soma"
            android:text="+"
            android:onClick="operadores"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelar"
            android:text="C"
            android:onClick="cancelar"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            android:text="0"
            android:onClick="numeros"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/igual"
            android:text="="
            android:onClick="resultado"/>
        
        <Button 
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/divisao"
            android:text="/"
            android:onClick="operadores"/>
    </LinearLayout>

</LinearLayout>
